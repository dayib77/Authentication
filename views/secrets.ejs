<%- include('partials/header') %>

<div class="jumbotron text-center">
  <div class="container">
    <i class="fas fa-key fa-6x"></i>
    <h1 class="display-3">List of secrets</h1>
    <!-- <p class="secret-text">Jack Bauer is my hero.</p> -->
    <p>
      <table class="table">
        <thead class="thead-dark">
          <tr>
            <th scope="col">#</th>
            <th scope="col">ID</th>
            <th scope="col">SECRET</th>
            <th scope="col">PROVIDER</th>
          </tr>
        </thead>
        <% Usr.forEach((user, i) => { %>
          <tbody class="table table-striped">
            <tr>
                <th scope="row"><%= i %></th>
                <td><%= user.id %></td>
                <td><%= user.secret %></td>
                <td><%= user.provider %></td>
            </tr>
          </tbody>
        <% }); %>
      </table>


      <!-- <ul class="list-group">
        <h5 class="card-header">List of secrets</h5>

          <li class="list-group-item list-group-item-info"></li>

      </ul> -->
    </p>
    <hr>

    <a class="btn btn-light btn-lg" href="/logout" role="button">Log Out</a>
    <a class="btn btn-dark btn-lg" href="/submit" role="button">Submit a Secret</a>
    <!-- <hr> -->
  </div>
</div>

<%- include('partials/footer') %>
